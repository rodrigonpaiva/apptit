{
  "name": "ui",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/ui/src",
  "projectType": "library",
  "tags": ["scope:shared", "type:ui"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{workspaceRoot}/dist/packages/ui"],
      "options": {
        "tsConfig": "packages/ui/tsconfig.lib.json",
        "main": "packages/ui/src/index.ts",
        "outputPath": "dist/packages/ui",
        "assets": []
      }
    },
    "typecheck": {
      "executor": "@nx/js:tsc",
      "options": {
        "tsConfig": "packages/ui/tsconfig.lib.json",
        "noEmit": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/ui/**/*.{ts,tsx}"]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/test-output/ui", "{workspaceRoot}/test-output/ui-coverage"],
      "options": {
        "config": "packages/ui/vitest.config.ts",
        "reportsDirectory": "test-output/ui"
      }
    }
  }
}
