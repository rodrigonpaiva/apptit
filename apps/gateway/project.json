{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "@apptit/gateway",
  "projectType": "application",
  "sourceRoot": "apps/gateway/src",
  "targets": {
    "build": {
      "dependsOn": ["^build"],
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build",
        "args": ["--config", "webpack.config.js", "--node-env=production"],
        "cwd": "apps/gateway"
      },
      "configurations": {
        "development": {
          "args": ["--config", "webpack.config.js", "--node-env=development"]
        },
        "production": {
          "args": ["--config", "webpack.config.js", "--node-env=production"]
        }
      }
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["^build"],
      "options": {
        "buildTarget": "@apptit/gateway:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "@apptit/gateway:build:development"
        },
        "production": {
          "buildTarget": "@apptit/gateway:build:production"
        }
      }
    }
  },
  "tags": []
}
