{
  "name": "common",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/common/src",
  "projectType": "library",
  "tags": [
    "scope:shared",
    "type:lib"
  ],
  "// targets": "to see all targets run: nx show project common --web",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{projectRoot}/dist"
      ],
      "options": {
        "tsConfig": "packages/common/tsconfig.lib.json",
        "main": "packages/common/src/index.ts",
        "outputPath": "dist/packages/common"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsc --project packages/common/tsconfig.lib.json --noEmit"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/common/**/*.ts"
        ]
      }
    }
  }
}
