{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "rootDir": "src"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.graphql", "src/generated/**/*"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts", "dist", "node_modules", "codegen.ts"]
}
