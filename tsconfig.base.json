{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@apptit/source"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "baseUrl": ".",
    "paths": {
      "@apptit/common": ["packages/common/src/index.ts"],
      "@apptit/config": ["packages/config/src/index.ts"],
      "@apptit/graphql": ["packages/graphql/src/index.ts"],
      "@apptit/prisma": ["packages/prisma/src/index.ts"],
      "@apptit/testing": ["packages/testing/src/index.ts"],
      "@apptit/types": ["packages/types/src/index.ts"],
      "@apptit/ui": ["packages/ui/src/index.ts"]
    }
  }
}
