{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "types": ["node"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["src/*"],
      "@apptit/graphql": ["../../packages/graphql/src/index.ts"]
    },
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/graphql/src/**/*.ts",
    "../../packages/graphql/src/**/*.tsx"
  ],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "../../packages/graphql"
    }
  ]
}
