{
  "name": "ui",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/ui/src",
  "projectType": "library",
  "tags": [
    "scope:shared",
    "type:ui"
  ],
  "// targets": "to see all targets run: nx show project ui --web",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{projectRoot}/dist"
      ],
      "options": {
        "tsConfig": "packages/ui/tsconfig.lib.json",
        "main": "packages/ui/src/index.ts",
        "outputPath": "dist/packages/ui"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsc --project packages/ui/tsconfig.lib.json --noEmit"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/ui/**/*.ts",
          "packages/ui/**/*.tsx"
        ]
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx vitest run packages/ui --runInBand"
      }
    }
  }
}
