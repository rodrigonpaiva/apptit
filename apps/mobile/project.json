{
  "name": "mobile",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/mobile/src",
  "projectType": "application",
  "tags": [
    "scope:mobile",
    "type:app"
  ],
  "// targets": "to see all targets run: nx show project mobile --web",
  "targets": {
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx react-native start",
        "cwd": "apps/mobile"
      }
    },
    "run-ios": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx react-native run-ios",
        "cwd": "apps/mobile"
      }
    },
    "run-android": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx react-native run-android",
        "cwd": "apps/mobile"
      }
    },
    "bundle": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx react-native bundle --entry-file src/main.tsx --bundle-output dist/apps/mobile/main.jsbundle --platform ios --dev false",
        "cwd": "apps/mobile"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx vite build --config apps/mobile/vite.config.ts"
      }
    },
    "pod-install": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pod install",
        "cwd": "apps/mobile/ios"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsc --project apps/mobile/tsconfig.app.json --noEmit"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/mobile/**/*.ts",
          "apps/mobile/**/*.tsx"
        ]
      }
    }
  }
}
