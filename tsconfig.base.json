{
  "compilerOptions": {
    "composite": true,
    "ignoreDeprecations": "6.0",
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "baseUrl": ".",
    "allowImportingTsExtensions": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@apptit/source"],
    "paths": {
      "@apptit/prisma": ["packages/prisma/dist/src/index.d.ts"],
      "@apptit/contracts": ["packages/contracts/dist/src/index.d.ts"]
    }
  }
}
