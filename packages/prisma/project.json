{
  "name": "@apptit/prisma",
  "projectType": "library",
  "sourceRoot": "packages/prisma/src",
  "targets": {
    "tsc": {
      "executor": "@nx/js:tsc",
      "outputs": ["{workspaceRoot}/packages/prisma/dist"],
      "options": {
        "main": "packages/prisma/src/index.ts",
        "tsConfig": "packages/prisma/tsconfig.lib.json",
        "outputPath": "packages/prisma/dist",
        "assets": [
          {
            "input": "packages/prisma",
            "glob": "package.dist.json",
            "output": "."
          },
          {
            "input": "packages/prisma",
            "glob": "prisma/**/*",
            "output": "./prisma"
          }
        ]
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/packages/prisma/dist"],
      "options": {
        "commands": [
          "nx run @apptit/prisma:tsc",
          "if [ -f packages/prisma/dist/package.dist.json ]; then mv packages/prisma/dist/package.dist.json packages/prisma/dist/package.json; elif [ -f packages/prisma/package.dist.json ]; then cp packages/prisma/package.dist.json packages/prisma/dist/package.json; fi"
        ],
        "parallel": false
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -p packages/prisma/tsconfig.lib.json --noEmit"
      }
    },
    "generate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx prisma generate --schema=packages/prisma/schema.prisma"
      }
    }
  },
  "tags": ["npm:private"]
}
